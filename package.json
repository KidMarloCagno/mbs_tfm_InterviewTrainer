{
  "name": "mbs-tfm-interview-trainer",
  "version": "1.0.0",
  "packageManager": "pnpm@10.29.3",
  "description": "Gamified IT interview practice platform with spaced repetition and active recall",
  "author": "Joaquin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KidMarloCagno/mbs_tfm_InterviewTrainer.git"
  },
  "bugs": {
    "url": "https://github.com/KidMarloCagno/mbs_tfm_InterviewTrainer/issues"
  },
  "homepage": "https://github.com/KidMarloCagno/mbs_tfm_InterviewTrainer#readme",
  "keywords": [
    "interview",
    "learning",
    "quiz",
    "spaced-repetition",
    "nextjs",
    "typescript"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && prisma migrate deploy && next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "check-versions": "bash scripts/check-pnpm-version.sh",
    "test": "vitest",
    "test:db:prepare": "tsx scripts/prepare-test-db.ts",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "prisma:push": "prisma db push",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:seed": "prisma db seed",
    "prisma:studio": "prisma studio"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@hookstate/core": "^4.0.1",
    "@prisma/client": "^5.8.0",
    "bcryptjs": "^2.4.3",
    "next": "^14.0.0",
    "next-auth": "^4.24.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.53.2",
    "sharp": "^0.34.5",
    "zod": "^3.24.1",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.35",
    "husky": "^9.1.7",
    "jsdom": "^24.1.1",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.45",
    "prettier": "^3.8.1",
    "prisma": "^5.8.0",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "vitest": "^2.1.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,css,scss,yml,yaml}": [
      "prettier --write",
      "prettier --check"
    ]
  }
}
